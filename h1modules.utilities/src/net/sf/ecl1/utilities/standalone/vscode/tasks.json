{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ecl1: Open Commit-Exporter",
      "type": "shell",
      "command": "./gradlew",
      "windows": {
        "command": ".\\gradlew.bat"
      },
      "args": [
        ":net.sf.ecl1.commit.exporter:run"
      ],
      "options": {
        "cwd": "${workspaceFolder}/ecl1"
      },
      "problemMatcher": [
        "$gradle"
      ]
    },
    {
      "label": "ecl1: Run git batch pull",
      "type": "shell",
      "command": "./gradlew",
      "windows": {
        "command": ".\\gradlew.bat"
      },
      "args": [
        ":net.sf.ecl1.git.batch-pull-button:run"
      ],
      "options": {
        "cwd": "${workspaceFolder}/ecl1"
      },
      "problemMatcher": [
        "$gradle"
      ]
    },
